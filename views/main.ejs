<!-- LOGIN CARD -->
<div class="login-view card-container">
	<div class="ui form segment">
		<form ng-submit="submitLoginForm()" class="login-form ui form">
			<div>
				<label for="username">Username:</label>
				<input ng-model="loginForm.username" type="text" name="username"/>
			</div>
			<div>
				<label for="password">Password:</label>
				<input ng-model="loginForm.password" type="password" name="password"/>
			</div>

			<input type="submit" class="ui submit button" value="Login"/>
			<div class="new-user-btn ui submit button">Create Account</div>
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		</form>
	</div>
</div>