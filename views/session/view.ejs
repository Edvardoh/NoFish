<div class="login-view card-container">
	<div class="ui form segment">
		<form class="login-form ui form" action="/session/create" method="POST">
			<% if(flash && flash.err) { %>
				<ul class="ui warning message visible">
					<% Object.keys(flash.err).forEach(function(error) { %>
						<li>Error: <%- flash.err[error].message %></li>
					<% }) %>
				</ul>
			<%  } %>

			<div>
				<label for="username">Username:</label>
				<input type="text" name="username"/>
			</div>
			<div>
				<label for="password">Password:</label>
				<input type="password" name="password"/>
			</div>

			<input type="submit" class="ui submit button" value="Login"/>
			<div class="new-user-btn ui submit button">Create Account</div>
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		</form>
	</div>
</div>